<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/altitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="农历日期:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/layear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/altitle"
                android:layout_gravity="center_horizontal"
                android:text="农历年"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lamonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="农历月"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/laday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="农历日"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weekis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/laday"
                android:layout_toRightOf="@+id/weekis"
                android:text="几"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tiangan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天干地支:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tiangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天干"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lucky_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/laday"
                android:text="吉:"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/lucky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吉神"
                android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fierce_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凶:"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/fierce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凶神"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宜:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/yi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宜做"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忌:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忌做"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

